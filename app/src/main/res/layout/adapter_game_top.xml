<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="gamesTop"
                type="com.poc.fioalpha.a100topgames.presentation.model.GameViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                tools:srcCompat="@tools:sample/avatars[0]"
                android:id="@+id/imageView"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>

        <TextView
                android:text="@{gamesTop.name}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/name_game"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:text="@{gamesTop.counterViewer}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/viewers"
                app:layout_constraintBottom_toBottomOf="@+id/channels"
                app:layout_constraintTop_toTopOf="@+id/channels"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/channels"
                android:gravity="center_horizontal"/>

        <TextView
                android:text="@{gamesTop.counterChannel}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/channels"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="115dp"
                app:layout_constraintStart_toEndOf="@+id/viewers"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                android:gravity="center_horizontal"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>